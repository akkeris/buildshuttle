{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "no-console": "off",
    "max-len": [
      "warn", 
      { "code": 125, "ignoreUrls": true, "ignorePattern": "^(async )?function.*" }
    ],
    "no-param-reassign": "off",
    "camelcase": "off"
  }
}